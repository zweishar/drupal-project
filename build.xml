<?xml version="1.0" encoding="UTF-8"?>

<project name="FooBar" default="build">

  <target name="build">
    <exec command="git checkout artifact dev-live" />
    <exec command="git pull origin dev" />
    <move file=".gitignore" tofile="tmp.gitignore" />
    <move file=".gitignore-artifact" tofile=".gitignore" overwrite="true"/>
    <composer command="install" composer="/usr/local/bin/composer" />
    <exec command="git add *" />
    <exec command="git commit -m 'Artifacts generated by phing'" />
    <exec command="git push artifact dev-live" />
    <move file=".gitignore" tofile=".gitignore-artifact" />
    <move file="tmp.gitignore" tofile=".gitignore" overwrite="true"/>
    <exec command="git checkout origin dev" />
  </target>

</project>